{
    "name": "milkesha/github-api",
    "description": "PHP/GitHub API Challenge",
    "scripts": {
        "create-repo": "@php cli --action=create_repository",
        "delete-repo": "@php cli --action=delete_repository",
        "test": "@php test"
    },
    "scripts-descriptions": {
        "create-repo": "Creates github repository"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Commands\\": "app/commands/",
            "App\\Enums\\": "app/enums/",
            "App\\Traits\\": "app/traits/",
            "App\\Controllers\\": "app/controllers/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "AMilkevich",
            "email": "alexandrsmilkevich@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.4",
        "ext-curl": "*"
    }
}
